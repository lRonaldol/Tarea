@model Tarea.Model.ViewModels.IndexViewModel
@{
    Layout = "Layout";
}
        <div class="slides">

            
            <img src="~/images/carousel1.jpg" />
        </div>

        <h1>Clasificación de los vertebrados</h1>
        <div class="clases">

    @foreach (var p in Model.Clase)
    {

        <div>
            <a href="~/Home/especies/@(p.nombre.Replace(" ",""))">
                <img src="~/Clases/@(p.id).jpg" />
                <h1>@(p.nombre)</h1>
                <p>
                    @p.descripcion
                </p>
            </a>

        </div>


    }
        </div>
   


   


